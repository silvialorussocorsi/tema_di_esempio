{% schema %}
{
  "name": "Prodotti in evidenza",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Titolo della sezione",
      "info": "Il valore predefinito è il titolo della collezione."
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collezione"
    }
  ],
  "presets": [
    {
      "name": "Prodotti in evidenza",
      "category": "Funzionalità"
    }
  ]
}
{% endschema %}
{%- assign collection = collections[section.settings.collection] -%}
<div class="container bg-white my-5 text-center">
  <h2 class="mb-4">{{ section.settings.title | default: collection.title | escape }}</h2>
  <div class="row justify-content-md-center">
    {%- for product in collection.products limit: 4 -%}
      {%- include 'product' with product -%}
    {%- endfor -%}
  </div>
</div>